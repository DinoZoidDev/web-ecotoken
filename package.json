{
    "name": "@ecotoken/monorepo",
    "private": true,
    "workspaces": [
        "apps/admin",
        "apps/user",
        "packages/api",
        "packages/auth",
        "packages/config/*",
        "packages/db",
        "packages/ui",
        "packages/email"
    ],
    "scripts": {
        "build": "dotenv -- turbo build",
        "clean": "run-script-os",
        "clean:windows": "del /f /s node_modules",
        "clean:default": "rm -rf node_modules",
        "clean:workspaces": "turbo clean",
        "db:generate": "dotenv -- turbo db:generate",
        "db:push": "dotenv -- turbo db:push",
        "db:seed": "dotenv -- turbo db:seed",
        "db:studio": "dotenv -- turbo db:studio",
        "dev": "dotenv -- turbo dev --parallel --concurrency 11",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
        "lint": "dotenv -- turbo lint",
        "lint:fix": "dotenv -- turbo lint:fix",
        "type-check": "turbo type-check",
        "postinstall": "npm run db:generate"
    },
    "dependencies": {
        "@ecotoken/eslint-config": "*",
        "@ecotoken/prettier-config": "*",
        "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
        "@types/prettier": "^2.7.2",
        "dotenv-cli": "^7.0.0",
        "prettier": "^2.8.4",
        "prettier-plugin-tailwindcss": "^0.2.4",
        "run-script-os": "^1.1.6",
        "turbo": "^1.8.5",
        "eslint": "^8.36.0",
        "typescript": "^5.0.2"
    },
    "license": "AGPL-3.0-or-later"
}
